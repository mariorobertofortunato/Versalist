    <!-- Main Screen help dialog -->
    <string name="how_it_works">איך זה עובד</string>
    <string name="how_it_works_text">זהו המרכז שלך לכל הרשימות שלך. ייצור רשימה חדשה הוא פשוט - רק ללחוץ על הכפתור למטה שבמסך.</string>
    <string name="types_and_categories">סוגים וקטגוריות:</string>
    <string name="types_and_categories_text">לכל רשימה יש שני תכונות:\n• סוג: החלט אם זו רשימה פתוחה או רשימת צ\'ק.\n• קטגוריה: הקצה קטגוריה כמו עבודה, קניות, בריאות ועוד, כדי לארגן את הרשימות שלך.</string>
    <string name="navigating_your_lists">ניווט ברשימות שלך:</string>
    <string name="navigating_your_lists_text">רק להקיש על שם רשימה כדי לגשת אליה ולהתחיל להוסיף פריטים אישיים לרשימה. כדי לגשת לאפשרויות נוספות, כמו מחיקת רשימה או סימון כחשוב, פשוט ללחוץ לחיצה ארוכה על שם הרשימה.</string>
    <string name="got_it">הבנתי!</string>

    <!-- List Screen help dialog -->
    <string name="list_screen_help_text_1">חקור את כל הפריטים ברשימתך כאן והוסף פריטים חדשים על ידי לחיצה על הכפתור למטה שבמסך.</string>
    <string name="list_screen_help_text_2">סמן פריטים במהירות כמו שהושלמו או שלא הושלמו בלחיצה אחת אם הרשימה שלך בפורמט של רשימת צ\'ק.</string>
    <string name="list_screen_help_text_3">הסר פריטים במהירות על ידי ביצוע לחיצה ארוכה כדי לגשת לתפריט הנפתח.</string>

